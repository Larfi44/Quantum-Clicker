<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/Coin"
        android:layout_width="156dp"
        android:layout_height="159dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.384"
        app:srcCompat="@drawable/quantum_coin" />

    <TextView
        android:id="@+id/Points"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_marginTop="26dp"
        android:gravity="center"
        android:text="0"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Coin"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/Yarik__Studio"
        android:layout_width="183dp"
        android:layout_height="112dp"
        android:layout_marginStart="100dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/yarik_studio_text__dark" />

    <ImageView
        android:id="@+id/Logo"
        android:layout_width="91dp"
        android:layout_height="102dp"
        android:layout_marginEnd="56dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/Yarik__Studio"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.494"
        app:srcCompat="@drawable/logo__dark" />

    <ImageView
        android:id="@+id/Energy"
        android:layout_width="30dp"
        android:layout_height="33dp"
        android:layout_marginStart="188dp"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/quantum_energy"
        tools:layout_editor_absoluteY="2dp" />

    <Button
        android:id="@+id/Proton"
        android:layout_width="150dp"
        android:layout_height="85dp"
        android:layout_marginEnd="180dp"
        android:text="Buy proton (150)"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.98" />

    <Button
        android:id="@+id/Electron"
        android:layout_width="150dp"
        android:layout_height="85dp"
        android:layout_marginStart="180dp"
        android:text="Buy electron (100)"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.76"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.98" />

    <ImageView
        android:id="@+id/Details"
        android:layout_width="54dp"
        android:layout_height="56dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/Electron"
        app:layout_constraintStart_toEndOf="@+id/Proton"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.97"
        app:srcCompat="@android:drawable/ic_menu_help" />

</androidx.constraintlayout.widget.ConstraintLayout>